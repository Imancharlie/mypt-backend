# Production Environment Variables for PythonAnywhere
# Copy this to .env on your PythonAnywhere server

# Django Settings
DEBUG=True
SECRET_KEY=your-production-secret-key-here
ALLOWED_HOSTS=yourusername.pythonanywhere.com,www.yourusername.pythonanywhere.com

# AI API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# CORS Settings
CORS_ALLOWED_ORIGINS=https://maipt.netlify.app,https://your-frontend-domain.com

# Security Settings
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY
